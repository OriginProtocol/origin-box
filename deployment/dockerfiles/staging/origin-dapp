FROM node:9 as origin-js-build
WORKDIR /app

# Clone origin-js from stable (staging) branch
RUN git clone https://github.com/OriginProtocol/origin-js.git --branch stable /app
RUN npm install --quiet --no-progress
RUN npm run build

FROM node:9 as build
WORKDIR /app
COPY ./origin-dapp /app

ENV BRIDGE_SERVER_DOMAIN=bridge.staging.originprotocol.com \
    BRIDGE_SERVER_PROTOCOL=https \
    IPFS_DOMAIN=ipfs.staging.originprotocol.com \
    IPFS_GATEWAY_PORT=443 \
    IPFS_GATEWAY_PROTOCOL=https \
    IPFS_API_PORT=443 \
    IPFS_SWARM=/dnsaddr/messaging.staging.originprotocol.com/tcp/443/wss/ipfs/QmdRNZgnhYzJrjfPE2ikKJajdHgmHNoaLk2hkvNGuYXkPB \
    MESSAGING_ACCOUNT=0xcEB59C583Cb09694606189E9E558D001D308A08B \
    PROVIDER_URL=https://rinkeby.infura.io/emIXjs9eDuy57IlTYsIP \
    MESSAGING_NAMESPACE=staging

RUN npm install --quiet --no-progress
# Overwrite installed origin-js with previously built version from stable branch
COPY --from=origin-js-build /app/dist/ /app/node_modules/origin/dist/
COPY --from=origin-js-build /app/package.json /app/node_modules/origin/
RUN NODE_ENV=production node_modules/.bin/webpack --progress --display errors-only

# TODO remove this and use nginx when stable can handle configuration of env vars properly
CMD /bin/sh -c "node_modules/.bin/serve -p 80 build"

