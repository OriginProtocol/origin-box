FROM python:3.6

RUN apt-get update
RUN apt-get upgrade -y
RUN apt-get install libsecp256k1-dev -y
RUN pip install gunicorn

WORKDIR /app
COPY ./origin-bridge /app
RUN pip install -r requirements.txt

EXPOSE 5000

CMD [ \
    "gunicorn", \
    "-b", ":5000", \
    "--access-logfile", "-", \
    "--error-logfile", "-", \
    "main:app" \
]
