FROM python:3.6

RUN apt-get update -y --fix-missing
RUN apt-get upgrade -y
RUN apt-get install libsecp256k1-dev -y
RUN pip install gunicorn

WORKDIR /app

# Invalidate Docker cache if necessary by adding the hash of the current commit
# from the remote repository
ADD https://api.github.com/repos/OriginProtocol/origin-bridge/git/refs/heads/stable /version.json
# Clone origin-bridge from stable (production) branch
RUN git clone --depth 1 --branch stable https://github.com/OriginProtocol/origin-bridge.git /app

RUN pip install -r requirements.txt

EXPOSE 5000

CMD [ \
    "gunicorn", \
    "-b", ":5000", \
    "--access-logfile", "-", \
    "--error-logfile", "-", \
    "main:app" \
]
